.container {
    margin-top: 80rpx;
    background: #fff;
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx;
    background-clip: content-box;
}
.tab {
    top: 0;
    left: 0;
    z-index: 1;
    position: fixed;
    width: 100%;
    height: 60rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 10rpx;
    background: #888;
}


.tab-item {
    height: 100%;
    display: flex;
    align-items: center;
    border-radius: 10rpx;
    padding: 0 10rpx;
    font-size: 28rpx;
}
.tab-item-selected {


}
.topic-item {
    box-sizing: border-box;
    width: 100%;
    height: 140rpx;
    padding: 5rpx;
    display: flex;
    overflow: hidden;
    margin-bottom: 30rpx;
    border-bottom: 1px solid #eee;
}

.left {
    display: flex;
    flex-direction: column;
    width: 100rpx;
    align-items: center;
    margin-right: 20rpx;
}
.tag {
    border-radius: 5px;
    font-size: 27rpx;
    text-align: center;
    margin-bottom: 5rpx;
    height: 35rpx;
    line-height: 35rpx;
    width: 70rpx;
    color: #999;
    background: #ccc;
}
.top-tag {
    background: #00AE33;
    color: #fff;    
}
.avatar {
    min-width: 80rpx;    
    height: 80rpx;
}
.avatar image {
    border-radius: 50%;
    display: block;
    width: 100%;
    height: 100%;
}


.right {
    display: flex;
    flex: 1;
    justify-content: space-between;
    flex-direction: column;
    padding-top: 15rpx;
}

.bottom {
    display: flex;
    justify-content: space-between;
    font-size: 25rpx;
    height: 25rpx;
    color: #888;
}
.count {
}
.from-now {
}

.pagination {
    display: flex;
    justify-content: space-around;
}

.pagination view {
    border: 1px solid #00AE33;
    padding: 10rpx 30rpx;
    color: #333;
}